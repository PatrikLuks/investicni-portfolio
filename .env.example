# ENVIRONMENT TEMPLATE
# Copy this file to .env.local and customize for your setup
# .env.local is gitignored and won't be committed

# Application
PORTFOLIO_APP_NAME=Investment Portfolio Manager Pro
PORTFOLIO_APP_VERSION=3.1.0
PORTFOLIO_APP_ENV=development

# API Configuration
PORTFOLIO_API_BASE_URL=http://localhost:3000/api
PORTFOLIO_API_TIMEOUT=5000

# API Keys (add your actual keys in .env.local)
PORTFOLIO_ALPHA_VANTAGE_KEY=your_key_here
PORTFOLIO_FINNHUB_KEY=your_key_here

# Feature Flags
PORTFOLIO_ENABLE_DEBUG=true
PORTFOLIO_ENABLE_ANALYTICS=false
PORTFOLIO_ENABLE_MARKET_DATA=true

# Performance
PORTFOLIO_BUNDLE_ANALYZE=false
PORTFOLIO_ENABLE_SOURCE_MAPS=true
