# Portfolio Manager Pro - Environment Configuration Template
# Copy this file to .env and fill in with your actual values
# IMPORTANT: Never commit actual .env file with secrets to version control

# ==========================================
# API Configuration
# ==========================================
# Base URL for API endpoints
API_BASE_URL=https://api.example.com
# API request timeout in milliseconds
API_TIMEOUT=30000
# Enable/disable API caching
API_CACHE_ENABLED=true
# API cache duration in seconds
API_CACHE_DURATION=300

# ==========================================
# Market Data Service
# ==========================================
# API key for market data provider (e.g., Alpha Vantage, Finnhub, etc.)
MARKET_DATA_API_KEY=your_api_key_here
# Enable market data service
MARKET_DATA_ENABLED=true
# Market data provider: 'alpha-vantage', 'finnhub', 'iex-cloud', 'mock'
MARKET_DATA_PROVIDER=finnhub
# Update frequency for market data (minutes)
MARKET_DATA_REFRESH_INTERVAL=5

# ==========================================
# Cloud Sync & Backup
# ==========================================
# Cloud sync endpoint URL
CLOUD_SYNC_ENDPOINT=https://sync.example.com
# Enable cloud synchronization
CLOUD_SYNC_ENABLED=false
# Cloud storage provider: 'aws-s3', 'azure-blob', 'google-cloud', 'custom'
CLOUD_STORAGE_PROVIDER=aws-s3
# Cloud storage credentials (use environment-specific secrets management)
CLOUD_STORAGE_KEY=your_key_here
CLOUD_STORAGE_SECRET=your_secret_here
CLOUD_STORAGE_BUCKET=portfolio-manager-backups

# ==========================================
# Analytics & Tracking
# ==========================================
# Enable analytics collection
ANALYTICS_ENABLED=true
# Google Analytics tracking ID
ANALYTICS_TRACKING_ID=G-XXXXXXXXXX
# Sentry error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# Sentry environment (development, staging, production)
SENTRY_ENVIRONMENT=production

# ==========================================
# Feature Flags
# ==========================================
# Advanced Analytics module
FEATURE_ADVANCED_ANALYTICS=true
# Cloud synchronization
FEATURE_CLOUD_SYNC=false
# Marketplace integration
FEATURE_MARKETPLACE=true
# AI insights (if backend supports)
FEATURE_AI_INSIGHTS=false
# Real-time market data
FEATURE_REALTIME_DATA=true
# Export to Excel
FEATURE_EXCEL_EXPORT=true
# Multi-portfolio support
FEATURE_MULTI_PORTFOLIO=true

# ==========================================
# Application Settings
# ==========================================
# Default theme: 'elegant-black', 'dark', 'light-classic', 'light-modern'
DEFAULT_THEME=elegant-black
# Default language: 'cs', 'en', 'de', 'fr', 'it', 'es', 'ja', 'zh', 'ru', 'pt'
DEFAULT_LANGUAGE=cs
# Number of decimal places for currency display
CURRENCY_DECIMAL_PLACES=2
# Currency symbol
CURRENCY_SYMBOL=Kƒç
# Currency code (ISO 4217)
CURRENCY_CODE=CZK

# ==========================================
# Security & CORS
# ==========================================
# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com
# CORS allowed methods
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
# Content Security Policy header
CSP_HEADER=default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.example.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:;
# JWT Secret (if using authentication)
JWT_SECRET=your_jwt_secret_key_here_change_in_production
# JWT Token expiration (hours)
JWT_EXPIRATION_HOURS=24

# ==========================================
# Database & Persistence
# ==========================================
# Use localStorage (browser) or server-side storage
STORAGE_TYPE=localStorage
# Server storage endpoint (if using server-side storage)
STORAGE_ENDPOINT=https://api.example.com/storage
# Database connection string (if applicable)
DATABASE_URL=mongodb://user:password@host:port/database

# ==========================================
# Email & Notifications
# ==========================================
# Email service enabled
EMAIL_ENABLED=false
# Email provider: 'sendgrid', 'mailgun', 'aws-ses', 'smtp'
EMAIL_PROVIDER=sendgrid
# Email API key
EMAIL_API_KEY=your_email_api_key_here
# From email address
EMAIL_FROM=noreply@example.com
# Support email address
SUPPORT_EMAIL=support@example.com

# ==========================================
# Logging & Debugging
# ==========================================
# Log level: 'debug', 'info', 'warn', 'error'
LOG_LEVEL=info
# Enable console logging in production
CONSOLE_LOGGING=false
# Enable file logging
FILE_LOGGING=false
# Log file path
LOG_FILE_PATH=/var/log/portfolio-manager/app.log

# ==========================================
# Performance & Caching
# ==========================================
# Enable service worker caching
SERVICE_WORKER_ENABLED=true
# Cache strategy: 'cache-first', 'network-first', 'stale-while-revalidate'
CACHE_STRATEGY=stale-while-revalidate
# Cache expiration time (hours)
CACHE_EXPIRATION_HOURS=24
# Enable performance monitoring
PERFORMANCE_MONITORING=true

# ==========================================
# Third-party Integrations
# ==========================================
# Slack webhook URL (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# Discord webhook URL
DISCORD_WEBHOOK_URL=https://discordapp.com/api/webhooks/YOUR/WEBHOOK
# Telegram bot token
TELEGRAM_BOT_TOKEN=your_telegram_token_here
# Telegram chat ID
TELEGRAM_CHAT_ID=your_chat_id_here

# ==========================================
# Deployment Settings
# ==========================================
# Environment: 'development', 'staging', 'production'
NODE_ENV=production
# Application base URL
APP_BASE_URL=https://portfolio.example.com
# Application port
APP_PORT=80
# API server port (if separate)
API_PORT=3000
# Enable HTTP/2 server push
HTTP2_SERVER_PUSH=true

# ==========================================
# Docker & Container Settings (if using Docker)
# ==========================================
# Docker image version
DOCKER_IMAGE_VERSION=latest
# Docker registry (for pushing images)
DOCKER_REGISTRY=docker.io
# Docker registry username
DOCKER_REGISTRY_USERNAME=your_username
# Docker registry password/token
DOCKER_REGISTRY_PASSWORD=your_token

# ==========================================
# Compliance & Legal
# ==========================================
# GDPR compliance enabled
GDPR_ENABLED=true
# Cookie consent type: 'explicit', 'implied', 'disabled'
COOKIE_CONSENT_TYPE=explicit
# Privacy policy URL
PRIVACY_POLICY_URL=https://example.com/privacy
# Terms of service URL
TERMS_OF_SERVICE_URL=https://example.com/terms
# Data retention period (days)
DATA_RETENTION_DAYS=365
